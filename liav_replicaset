apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: frontend
  labels:
    app: ui
    tier: frontend
spec:
  replicas: 3
  selector: 
    matchLabels:
      tier: frontend
  template:  
    metadata:
      labels:
        tier: frontend
    spec:
      containers: 
      - name: nginx 
        image: nginx:latest
        ports: 
      - containerPort: 80
      - name: springapp
        image: yanivomc/spring-music:latest
        ports: 
      - containerPort: 8080
